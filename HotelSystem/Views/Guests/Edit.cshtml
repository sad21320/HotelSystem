@model HotelSystem.Models.Guest
@{
    ViewData["Title"] = "Редактировать гостя";
}

<h2>Редактирование гостя</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="GuestID" />
    <input type="hidden" asp-for="CreatedDate" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="FirstName" class="form-label">Имя</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="LastName" class="form-label">Фамилия</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="MiddleName" class="form-label">Отчество</label>
            <input asp-for="MiddleName" class="form-control" />
        </div>
    </div>

    <div class="row g-3 mt-3">
        <div class="col-md-3">
            <label asp-for="PassportSeries" class="form-label">Серия</label>
            <input asp-for="PassportSeries" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="PassportNumber" class="form-label">Номер</label>
            <input asp-for="PassportNumber" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="PhoneNumber" class="form-label">Телефон</label>
            <input asp-for="PhoneNumber" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" type="email" />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Сохранить изменения</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}