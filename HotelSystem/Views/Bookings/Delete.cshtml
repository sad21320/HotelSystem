@model HotelSystem.Models.Booking
@{
    ViewData["Title"] = "Удаление бронирования";
}

<h1>Удалить бронирование?</h1>
<h3>Вы уверены, что хотите удалить это бронирование?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Заезд</dt>
        <dd class="col-sm-10">@Model.CheckInDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Выезд</dt>
        <dd class="col-sm-10">@Model.CheckOutDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Сумма</dt>
        <dd class="col-sm-10">@Model.TotalPrice ₽</dd>

        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Номер</dt>
        <dd class="col-sm-10">@Model.Room?.RoomNumber</dd>

        <dt class="col-sm-2">Гость</dt>
        <dd class="col-sm-10">
            @Model.Guest?.LastName @Model.Guest?.FirstName[0]. @Model.Guest?.MiddleName?[0].
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="BookingID" value="@Model.BookingID" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>