@model HotelSystem.Models.Booking
@{
    ViewData["Title"] = "Редактирование бронирования";
}

<h1>Редактировать бронирование</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingID" />

            <div class="form-group mb-3">
                <label asp-for="RoomID" class="control-label">Номер</label>
                <select asp-for="RoomID" class="form-control" asp-items="ViewBag.RoomID"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GuestID" class="control-label">Гость</label>
                <select asp-for="GuestID" class="form-control" asp-items="ViewBag.GuestID"></select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckInDate" class="control-label">Заезд</label>
                <input asp-for="CheckInDate" class="form-control" type="date" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="CheckOutDate" class="control-label">Выезд</label>
                <input asp-for="CheckOutDate" class="form-control" type="date" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="TotalPrice" class="control-label">Сумма</label>
                <input asp-for="TotalPrice" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Статус</label>
                <select asp-for="Status" class="form-control">
                    <option>Confirmed</option>
                    <option>Cancelled</option>
                    <option>Completed</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Отмена</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}