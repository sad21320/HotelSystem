@model IEnumerable<HotelSystem.Models.Booking>
@{
    ViewData["Title"] = "Бронирования";
}
<h2>Список бронирований</h2>
<p><a asp-action="Create" class="btn btn-success">+ Новое бронирование</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Номер</th>
            <th>Гость</th>
            <th>Тип номера</th>
            <th>Заезд</th>
            <th>Выезд</th>
            <th>Сумма</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.Room?.RoomNumber</td>
                <td>@b.Guest?.LastName @b.Guest?.FirstName[0]. @b.Guest?.MiddleName?[0].</td>
                <td>@b.Room?.RoomType?.TypeName</td>
                <td>@b.CheckInDate.ToString("dd.MM.yyyy")</td>
                <td>@b.CheckOutDate.ToString("dd.MM.yyyy")</td>
                <td>@b.TotalPrice ₽</td>
                <td><span class="badge bg-@(b.Status == "Confirmed" ? "success" : "warning")">@b.Status</span></td>
                <td>
                    <a asp-action="Details" asp-route-id="@b.BookingID" class="btn btn-sm btn-info">Подробно</a>
                    <a asp-action="Edit" asp-route-id="@b.BookingID" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@b.BookingID" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>